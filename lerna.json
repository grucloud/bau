{
  "packages": ["bau/**/*", "bau-css/**/*", "bau-router/**/*", "examples/**/*"],
  "npmClient": "pnpm",
  "useWorkspaces": true,
  "version": "0.61.0",
  "command": {
    "command": {
      "bootstrap": {
        "npmClientArgs": ["--no-audit"]
      }
    },
    "publish": {
      "create-release": "github",
      "conventional-commits": true
    },
    "run": {
      "ignore": []
    }
  }
}
